<?xml version="1.0"?>
<launch>

  <!-- SCORABLE OBJECT -->

  <arg name="namespace" default="object" />
  <arg name="delay" default="5"/>

  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0.15"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>


  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-database wood_cube_2_5cm -sdf -model wood_cube_2_5cm -model cube_$(arg namespace)
  -x $(arg x) -y $(arg y) -z $(arg z)
  -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)
  -robot_namespace $(arg namespace)
  " launch-prefix="bash -c 'sleep $(arg delay); $0 $@' "/>

</launch>
